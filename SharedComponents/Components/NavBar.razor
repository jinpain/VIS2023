<div class="pb-3">
    <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom shadow-sm" style="height:60px">
        <div class="container-fluid row row-cols-3">
            <div class="col px-4">
                <span class="fw-bold">
                    @ServiceName
                </span>
            </div>
            <div class="col">
                @ChildContent
            </div>
            <div class="col text-end">
                <span class="px-4">
                    <i class="bi bi-person-fill text-primary" />
                    @UserName
                </span>
                <span type="button" @onclick="() => Logout.InvokeAsync()">
                    <i class="bi bi-door-closed-fill" />
                    Выход
                </span>
            </div>
        </div>
    </nav>
</div>

@code 
{
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public string? ServiceName { get; set; }
    [Parameter]
    public string? UserName { get; set; }
    [Parameter]
    public EventCallback Logout { get; set; }
}
