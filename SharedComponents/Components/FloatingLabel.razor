<div class="form-floating @CustomClass" autocomplete="off">
    @ChildContent
    <label class="@(IsSmall?"small":"")">@Label</label>
</div>

@code 
{
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public string? Label { get; set; }
    [Parameter]
    public string? CustomClass { get; set; }
    [Parameter]
    public bool IsSmall { get; set; } = false;
}
