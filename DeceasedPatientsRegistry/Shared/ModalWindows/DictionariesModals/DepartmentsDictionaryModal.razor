<div class="modal fade" id="departmentsDictionaryModal">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">
                    @(IsMain?"Словарь отделений":"Словарь отделений по разноске")
                </h1>
                <button class="btn btn-sm btn-primary" data-bs-target="#patientModal" data-bs-toggle="modal">Открыть карточку пациента</button>
            </div>
            <div class="modal-body">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <td width="50px">
                                <i type="button" class="bi bi-plus-circle-fill text-success" data-bs-toggle="dropdown" data-bs-auto-close="outside" />
                                <div class="dropdown-menu p-4 shadow-lg" style="min-width:350px">
                                    <div class="mb-3">
                                        <h5 class="text-center fw-bold">Форма добавления</h5>
                                    </div>
                                    <FloatingLabel Label="Наименование" CustomClass="pb-2">
                                        <input class="form-control" oninput="capitalizeFirstLetter(this)" @bind="_newDepartment.Name" />
                                    </FloatingLabel>
                                    <FloatingLabel Label="Описание" CustomClass="pb-2">
                                        <textarea class="form-control" style="height:150px" @bind="_newDepartment.Description" />
                                    </FloatingLabel>
                                    <div class="d-flex justify-content-between">
                                        <button class="btn btn-secondary" @onclick="() => _newDepartment = new()">Очистить</button>
                                        <button type="submit" class="btn btn-primary" @onclick="Insert">Добавить</button>
                                    </div>
                                </div>
                            </td>
                            <th width="300px">Наименование</th>
                            <th>Описание</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in DataManager.GetCachedData().Where(x => (x.IsMain == IsMain) && (x.IsDeleted == false)))
                        {
                            <tr>
                                <td>
                                    <i type="button" class="bi bi-pencil-fill text-primary" @onclick="() => SelectDepartment(item)" data-bs-toggle="dropdown" data-bs-auto-close="outside" />
                                    <div class="dropdown-menu p-4 shadow-lg" style="min-width:350px">
                                        <div class="mb-3">
                                            <h5 class="text-center fw-bold">Форма редактирования</h5>
                                        </div>
                                        <FloatingLabel Label="Наименование" CustomClass="pb-2">
                                            <input class="form-control" oninput="capitalizeFirstLetter(this)" @bind="_selectedDepartment.Name" />
                                        </FloatingLabel>
                                        <FloatingLabel Label="Описание" CustomClass="pb-2">
                                            <textarea class="form-control" @bind="_selectedDepartment.Description" style="height:150px" />
                                        </FloatingLabel>
                                        <div class="d-flex justify-content-between">
                                            <button class="btn btn-danger" @onclick="() => Delete(_selectedDepartment)">Удалить</button>
                                            <button class="btn btn-primary" @onclick="() => DataManager.UpdateAsync(_selectedDepartment)">Сохранить</button>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code
{
    [Parameter]
    public DataManager<Department, DepartmentFilter> DataManager { get; set; }
    [Parameter]
    public bool IsMain { get; set; }

    private Department _newDepartment = new();

    private Department _selectedDepartment = new();

    private void Insert()
    {
        _newDepartment.IsMain = IsMain;
        DataManager.InsertAsync(_newDepartment);
        _newDepartment = new() { IsMain = IsMain };
    }

    private void Delete(Department department)
    {
        department.IsDeleted = true;
        DataManager.DeleteAsync(department);
    }

    private void SelectDepartment(Department department) => _selectedDepartment = ObjectExtension.Clone(department);
}
